							li.navbutton
								form#logout(action="/logout",method="post")
								a(href="javascript:{}",onclick="$('#logout').submit()") Log out
					div.clearfix
		nav#chatbar.sidebarclosed.hidden-xm.hidden-sm.hidden-md
			svg(style="width:100%;height:100%;position:absolute")
				line#line1(x1="0",y1="0",x2="0",y2="50%",style="stroke:rgba(255,255,255,0.7);stroke-width:8")
				line#line2(x1="0",y1="100%",x2="0",y2="50%",style="stroke:rgba(255,255,255,0.7);stroke-width:8")
			div(style="height:70px;position:relative;overflow:hidden")
				svg(style="width:100%;height:100%;position:absolute")
					line.line3(x1="50%",y1="100%",x2="95%",y2="100%",style="stroke:rgba(255,255,255,0.7);stroke-width:6")
					line.line4(x1="50%",y1="100%",x2="5%",y2="100%",style="stroke:rgba(255,255,255,0.7);stroke-width:6")
