														li.item.pad-title
															a.ajax(href="/padscores")
																h5 JPAD Scores
											div.wrapper.clearfix
												figure.gallery-item
													img.department-logo(src="/images/button/sec.png")
													a(href="#")
														figcaption.img-title.sec-title
															h3 SEC
													ul.wheel.text-center
														li.item.sec-title
															a.ajax(href="/attendance")
																h5 Attendance
											div.wrapper.clearfix
												figure.gallery-item
													img.department-logo(src="/images/button/vl.png")
													a(href="#")
														figcaption.img-title.vl-title
															h3 VL
													ul.wheel.text-center
														li.item.vl-title
															a.ajax(href="#")
																h5 VL Inventory
											div.wrapper.clearfix
												figure.gallery-item
													img.department-logo(src="/images/button/SCHO.png")
													a(href="#")
														figcaption.img-title.scho-title
															h3 SCHO
													ul.wheel.text-center
														li.item.scho-title
															a.ajax(href="/checklist")
																h5 Checklist
											div.wrapper.clearfix
												figure.gallery-item
													img.department-logo(src="/images/button/hr.png")
													a(href="#")
														figcaption.img-title.hr-title
															h3 HR
													ul.wheel.text-center
														li.item.hr-title
															a.ajax(href="#")
																h5 Family Tree
											div.wrapper.clearfix
												figure.gallery-item
													img.department-logo(src="/images/button/fin.png")
