											div.wrapper.clearfix
												figure.gallery-item
													img.department-logo(src="/images/button/pad.png")
													a(href="#")
														figcaption.img-title.pad-title
															h3 PAD
													ul.wheel.text-center
														li.item.pad-title
															a.ajax(href="/padattendance")
