		script.
			$(document).ajaxStart(function () {
				timeOut = setTimeout(function () {
					$('.load-screen').show();
				}, 0);
			});
			$(document).ajaxStop(function () {
				clearTimeout(timeOut);
				$('.load-screen').fadeOut(1500);
			});
		
