		div#header.padding-vert
			nav.navbar.navbar-default.navbar-fixed-top
				div.container
					div.navbar-header
						button#phone-nav-button.navbar-toggle.collapsed(type="button",data-toggle="collapse",data-target="#navbar")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						div#central-title
							a.ajax.navbar-brand(href="/",data-target="tooltip",data-placement="bottom",title="Back to home")
								img#logo.img-responsive(src="/images/logoAllWhite.png")
								h2(style="position:relative;margin:0px;top:-7px;") YSES Central
						div#search-bar.right-inner-addon.hidden-xs.hidden-sm.hidden-md
							// label(for="tags")
							i.glyphicon.glyphicon-search
							input#tags.form-control(type="text",name="mentee-1")
						div.btn-group.text-left.hidden-xs(style='float:right')
							div#navigation-buttons
								button.btn-name.dropdown-toggle(type="button",data-toggle="dropdown")
									h3#name #{name}
										img(src='/#{picture}',style='width:40px;margin-left:15px;')
								ul.dropdown-menu.metro-dropdown(role="menu")
									li
										a.ajax.bold(href="/profile/#{username}") View Profile
									li
										a.ajax.bold(href="/YSERs") View YSERs
									li
										a.ajax.bold(href="/3") Something else here
									li.divider
									li
										form#logout(action="/logout",method="post")
										a(href="javascript:{}",onclick="$('#logout').submit()") Log out
								div#nav-button-group.text-center
									div#logbook-icon.hidden-sm.hidden-md
										a(href="/#",data-toggle="modal",data-target="#logbookModal,tooltip",data-placement="left",title="Write In Logbook")
											span.glyphicon.glyphicon-pencil
										div#logbookModal.modal.fade
											div.modal-dialog
												div.modal-content.text-center
													div.text-left.modal-header
														button.close(type="button",data-dismiss="modal")
															span(aria-hidden="true") &times;
															span.sr-only Close
														h6.modal-title Write to Logbook
													div.modal-body
														textarea#logbook-input(placeholder="Make your ideas be heard")
													div.modal-footer
														span#counter
														input#postLogbook.btn.btn-default(type="button",value="Post")
									div#chatbox-icon.hidden-sm.hidden-md
										a.menu-icon-chatbox(href="/#",data-target="tooltip",data-placement="left",title="Open Chatbox")
											span.glyphicon.glyphicon-send
									div#department-icon.hidden-sm.hidden-md
										a.menu-icon-department(href="/#",data-target="tooltip",data-placement="left",title="Access Department Systems")
											span.glyphicon.glyphicon-list
										div#department-button-container
											div.wrapper.clearfix
												figure.gallery-item
													img.department-logo(src="/images/button/exec.png")
													a(href="/#")
														figcaption.img-title.exec-title
															h3 EXEC
													ul.wheel.text-center
														li.item.exec-title
															a.ajax(href="/announcementposter")
																h5 Announcement
														li.item.exec-title
															a.ajax(href="/accountvalidator")
