doctype html
html
	head
		link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
		script(src='javascripts/jquery-2.1.1.min.js')
		script(src='javascripts/jquery-ui.min.js')
		script(src='javascripts/bootstrap.min.js')
		script(src='javascripts/signup.js')
		style.
			#signupModal .modal-dialog {
				width:100%;
				margin:0;
				height:100vh;
			}
			
			#signupModal .modal-content	{
				border-radius:0;
				height:100%;
			}
			
			.hoverClose	{
				position:absolute;
				right:5px;
				top:5px;
			}
			
			#photo{
				width:150px;
			
				font-size:10px;
			
				border-radius:0px;
			}
			
			#screen{
				position:relative;
			
				top:-20px;
				left:0;
			
				border-bottom-left-radius:3px;
				border-bottom-right-radius:3px;
			}
			
			#screen img{
				margin:0px;
				padding:0px;
				border:0px;
			
				top:0px;
				left:0px;
				right:0px;
				bottom:0px;
			}
			
			#upfile1{
				float:relative;
			
				background-color:rgba(255,255,255,1);
			
				color:gray;
			
				padding-top:5px;
			
				height:30px;
				width:250px;
				cursor:pointer;
				font-size:1em;
			
			
				margin-bottom:20px;
			
				border-top-left-radius:3px;
				border-top-right-radius:3px;
			}
			
			#bottom-input-file{
				position:fixed;
			
				left:4.5%;
			
				top:120px;
			
				padding-top:5px;
			
				background-color:rgba(255,255,255,1);
			
				color:gray;
			
				height:30px;
				width:250px;
			
				font-size:10px;
			
				border-bottom-left-radius:3px;
				border-bottom-right-radius:3px;
			}
			
			#picture-div{
				position:relative;
			}
			
			.modal-footer	{
				position:absolute;
				bottom:0;
				width:100%;
			}
	body
		a(href="#",data-toggle="modal",data-target="#signupModal") Sign Up
		// modal for sign up
		div#signupModal.modal.fade
			div.modal-dialog
				div.modal-content.text-center
					h2 Sign up
					p Picture
					p Please select a photo of jpg, gif, or png extension that is easily distinguishable.
					div#picture-div
						input#photo.form-control(type="file",name="photo",style='display:none')
						div#upfile1.text-center
							span Profile Picture: 
							span.glyphicon.glyphicon-picture
						div#bottom-input-file.text-center NO FILE SELECTED
						div#preview
					button.close.hoverClose(type="button",aria-hidden="true",data-dismiss="modal",data-toggle="modal") &times;
					div.modal-footer
						button.btn.btn-default(type="submit") Submit
