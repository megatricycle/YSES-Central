													span.glyphicon.glyphicon-minus.input-group-addon(style="top:0px;")
													input#sn-number.form-control.sn(type="text",maxlength="5",name="sn-number",placeholder="XXXXX")
											li Username:
												br
												input#username.form-control(type="text",name="username")
											li Password:
												input#password.form-control(type="password",name="password")
											li Retype Password:
												input#retype-password.form-control(type="password",name="retype-password")
											li Organization Batch:
												select.form-control(form="signupform",name="org_batch")
													each item in JSON.parse(batch)
														option(value=item)= item
