doctype html
html
	head
		title YSES Central
		link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/index.css')
		meta(name="viewport",content="width=device-width, initial-scale=1.0 user-scalable=no")
	
	body(data-type="background",data-speed="")
		// top bar
		nav.navbar.navbar-default.navbar-fixed-top
			div.container
				div.navbar-header
					button.navbar-toggle.collapsed(type="button",data-toggle="collapse",data-target="#navbar",aria-expanded="false",aria-controls="navbar")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href="#")
						img#logo.img-responsive(src="../images/logoAllWhite.png")
						h2(style="position:relative;margin:0px;top:-7px;") YSES-Central
				div#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						li.navbutton
							a(href="#",data-toggle="modal",data-target="#signupModal") Sign Up
							// modal for sign up
							div#signupModal.modal.fade
								div.modal-dialog
									div.modal-content.text-center
										form(action="#")
											div.text-left.modal-header
												button.close(type="button",data-dismiss="modal")
													span(aria-hidden="true") &times;
													span.sr-only Close
												h4.modal-title Sign Up
											div.modal-body
												ul.list-inline.container
													li First name:
														input.form-control(type="text",name="first-name")
													br
													li Middle name:
														input.form-control(type="text",name="middle-name")
													br
													li Last name:
														input.form-control(type="text",name="last-name")
													br
													li Org Classification:
														br
														select.form-control
															option Active
															option Inactive
															option Alumni
													br
													li Department:
														select.form-control
															optgroup(label="Projects and Activities")
																option Junior PAD
																option Senior PAD
															option Visuals and Logistics
															option Secretariat
															option Scholastics
															option Finance
															option Human Resources
													br
													li Student Number:
														br
														input.form-control(type="text",style="float:left;width:80px",maxlength="4",name="sn-year",placeholder="20XX")
														span(style="float:left;") &nbsp;-&nbsp; 
														input.form-control(type="text",style="float:left;width:80px",maxlength="5",name="sn-number",placeholder="XXXXX")
													br
													li Username:
														br
														input.form-control(type="text",name="username")
													br
													li Password:
														input.form-control(type="password",name="password")
													br
													li Organization Batch:
														select.form-control
															option Charter
															option Synergy
															option RAMpage
													br
													li University Batch:
														br
														select.form-control
															option 1998
															option 2012
															option 2014
													br
													li Mentor:
														br
														input.form-control(type="text",name="mentor")
													br
													li#mentees
														span Mentees:
														div.mentee-field.input-group
															input.mentee-textfield.form-control(type="text",name="mentee-1")
															span.input-group-btn
																button.add-mentee.btn.btn-default(type="button",value="+")
																	span.glyphicon.glyphicon-plus
													br
													li Birthday:
														input.form-control(type="date",name="bday")
													br
													li Home Address
														input.form-control(type="text",name="homeAdd")
													br
													li College Address
														input.form-control(type="text",name="collegeAdd")
											div.modal-footer
												button.btn.btn-warning(type="button",data-dismiss="modal",data-toggle="modal",data-target="#loginModal") Existing user?
												button.btn.btn-default(type="button") Submit
						li.navbutton
							a(href="#",data-toggle="modal",data-target="#loginModal") Log In
							// modal for log in
							div#loginModal.modal.fade
								div.modal-dialog
									div.modal-content.text-center
										form(action='login')
											div.text-left.modal-header
												button.close(type="button",data-dismiss="modal")
													span(aria-hidden="true") &times;
													span.sr-only Close
												h4.modal-title Log In
											div.modal-body
												div.item.form-group
														ul.list-inline.container
															li Username:
																input.form-control(type="text")
															br
															li Password:
																input.form-control(type="password")
											div.modal-footer
												button.btn.btn-warning(type="button",data-dismiss="modal",data-toggle="modal",data-target="#signupModal") No account yet?
												button.btn.btn-default(type="submit") Submit


		// image carousel
		div.encloseall.container-fluid
			// image gallery
			div.gallery
				div#myCarousel.carousel.slide(data-ride="carousel")
					div.carousel-inner
						div.active.item
							img.image.img-responsive(src='../images/pfjf.png')
						div.item
							img.image.img-responsive(src='../images/for.jpg')
						div.item
							img.image.img-responsive(src='../images/city.jpg')
						div.item
							img.image.img-responsive(src='../images/for.jpg')
					a.carousel-control.left(href="#myCarousel",data-slide="prev")
						span.glyphicon.glyphicon-chevron-left
					a.carousel-control.right(href="#myCarousel",data-slide="next")
						span.glyphicon.glyphicon-chevron-right
					ol.carousel-indicators
						li.active(data-target="#myCarousel",data-slide-to="0")
							//img(src='../images/eventbutton.png')
						li(data-target="#myCarousel",data-slide-to="1")
						li(data-target="#myCarousel",data-slide-to="2")
						li(data-target="#myCarousel",data-slide-to="3")
		// content
		div.encloseall.container
			div.row
				div.col-lg-12
					div.col-lg-6.padding-vert
						ul.no-bullets
							li
								div.box
									div.row
										h3.title About
									div.row
										p Lorem ipsum
							li
								div.box
									div.row
										h3.title About
									div.row
										p Lorem ipsum
					div.col-lg-6.padding-vert
						ul.no-bullets
							li
								div.box
									div.row
										h3.title About
									div.row
										p Lorem ipsum
							li
								div.box
									div.row
										h3.title About
									div.row
										p Lorem ipsum
						
