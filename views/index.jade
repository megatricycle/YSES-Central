						div.modal-content.text-center
							form#signupform(action="signup",method="post",enctype="multipart/form-data")
								div.text-left.modal-header
									button.close(type="button",data-dismiss="modal")
										span(aria-hidden="true") &times;
										span.sr-only Close
									h4.modal-title(style='margin-bottom:10px;') Sign Up
								div.modal-body
									div.first-column
										span#picture-div
											input#photo.form-control(type="file",name="photo",style='display:none')
											div#upfile1.text-center
												span Profile Picture: 
												span.glyphicon.glyphicon-picture
											div#bottom-input-file.text-center NO FILE SELECTED
											div#preview
									div.second-column
										ul.no-bullets.container
											li First name:
												input.input-text.form-control(type="text",name="first_name")
											li Middle name:
												input.input-text.form-control(type="text",name="middle_name")
											li Last name:
												input.input-text.form-control(type="text",name="last_name")
											li Org Classification:
												br
												select.form-control(form="signupform",name="org_class")
													option(value="Active") Active
													option(value="Inactive") Inactive
													option(value="Alumni") Alumni
											li Department:
												select.form-control(form="signupform",name="department")
													optgroup(label="Projects and Activities")
														option(value="Junior Projects and Activities") Junior
														option(value="Senior Projects and Activities") Senior
													option(value="Visuals and Logistics") Visuals and Logistics
													option(value="Secretariat") Secretariat
													option(value="Scholastics") Scholastics
													option(value="Finance") Finance
